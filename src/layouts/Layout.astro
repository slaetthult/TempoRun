---
import '@styles/styles.scss';
import SiteHeader from "@components/base/SiteHeader.astro";
import SiteFooter from "@components/base/SiteFooter.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" dir="ltr">
	<head>
		<meta charset="UTF-8">
		<meta name="description" content="Astro description">
        <meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="generator" content={Astro.generator}>

        <meta property="og:title" content="Title">
        <meta property="og:description" content="Description">
        <meta property="og:type" content="website">
        <meta property="og:url" content="https://tempo-run-astro3.netlify.app/">
        <meta property="og:image" content="">

        <meta name="twitter:title" content="Title">
        <meta name="twitter:description" content="Description">
        <meta name="twitter:image" content="">
        <meta name="twitter:card" content="summary">

        <link rel="canonical" href="https://tempo-run-astro3.netlify.app/">

        <link rel="preload" href="/fonts/fonts.css" as="style">
        <link rel="stylesheet" href="/fonts/fonts.css">

        <link rel="icon" type="image/svg+xml" href="/favicon.svg">

		<title>{title}</title>
	</head>
	<body>
        <SiteHeader/>
        <main class="site-main">
            <slot />
        </main>
        <SiteFooter/>
	</body>
</html>
