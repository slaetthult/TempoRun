---
import 'tom-select/dist/css/tom-select.css';
interface Props {
    maxSelectable: number;
    classes: string;
}

const { maxSelectable = 1, classes = '', dataValidationRequired = false } = Astro.props;

const classNames = `selectbox ${classes}`;
---

<div class={classNames} data-js="selectbox" data-select-max-selectable={maxSelectable}>
    <label>
        {dataValidationRequired ?
                <select data-validation-required autocomplete="off">
                    <slot />
                </select>
                <small class="validation-error-message">Required</small>
        :
                <select autocomplete="off">
                    <slot />
                </select>
        }
    </label>
</div>

<script>
    import {selectbox} from "@scripts/partials/selectbox";

    selectbox.init();
</script>